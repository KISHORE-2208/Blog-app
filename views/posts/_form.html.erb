<%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div>
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
  
    <div>
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
  
    <%= form.submit "Create Post" %>
<% end %>
  